---
import '../styles/global.css';
// Component Imports
import Button from '../components/Button.svelte';
import MediaViewer from '../components/MediaViewer.svelte';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous">
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=JetBrains+Mono:wght@300;400;500&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Ursa - AI Object Detection & Media Viewer</title>
	</head>

	<body>
		<div class="cosmic-container">
			<!-- Animated Starfield Background -->
			<div class="starfield">
				<div class="stars-layer stars-small"></div>
				<div class="stars-layer stars-medium"></div>
				<div class="stars-layer stars-large"></div>
			</div>

			<!-- Gradient Mesh Overlay -->
			<div class="gradient-mesh"></div>

			<!-- Main Content -->
			<div class="content-wrapper">
				<header class="hero-header">
					<div class="logo-container">
						<div class="logo-glow"></div>
						<h1 class="logo-text">
							<span class="logo-ursa">URSA</span>
							<span class="logo-dot">•</span>
							<span class="logo-ai">AI</span>
						</h1>
					</div>
					<p class="tagline">
						<span class="tagline-accent">COSMIC VISION</span>
						<span class="tagline-divider">//</span>
						<span class="tagline-text">Real-time Object Detection</span>
					</p>
					<div class="hero-subtitle">
						Powered by TensorFlow.js • COCO-SSD Model • WebGL Acceleration
					</div>
				</header>

				<MediaViewer client:load />

				<footer class="page-footer">
					<div class="footer-grid">
						<div class="footer-stat">
							<div class="stat-label">Detection Speed</div>
							<div class="stat-value">5-10 FPS</div>
						</div>
						<div class="footer-stat">
							<div class="stat-label">Processing</div>
							<div class="stat-value">WebGL</div>
						</div>
						<div class="footer-stat">
							<div class="stat-label">Model</div>
							<div class="stat-value">COCO-SSD</div>
						</div>
					</div>
				</footer>
			</div>
		</div>
	</body>
</html>

<script>
	// Memory monitoring (dev mode only)
	if (import.meta.env.DEV) {
		import('../lib/utils/memoryMonitor').then(({ startMemoryMonitoring }) => {
			startMemoryMonitoring({
				checkInterval: 60000, // 1 minute
				growthThresholdMB: 5,
				logWarnings: true,
			});
		});
	}
</script>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'JetBrains Mono', monospace;
		overflow-x: hidden;
	}

	.cosmic-container {
		min-height: 100vh;
		background: linear-gradient(135deg, var(--cosmic-dark) 0%, var(--cosmic-deep) 50%, #0f1435 100%);
		position: relative;
		overflow: hidden;
	}

	/* Starfield Animation */
	.starfield {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: 1;
	}

	.stars-layer {
		position: absolute;
		width: 100%;
		height: 100%;
		background-repeat: repeat;
		will-change: opacity;
	}

	.stars-small {
		background-image:
			radial-gradient(1px 1px at 20px 30px, white, transparent),
			radial-gradient(1px 1px at 60px 70px, white, transparent),
			radial-gradient(1px 1px at 50px 160px, white, transparent),
			radial-gradient(1px 1px at 130px 80px, white, transparent),
			radial-gradient(1px 1px at 140px 150px, white, transparent);
		background-size: 200px 200px;
		animation: twinkle 3s ease-in-out infinite;
		opacity: 0.6;
	}

	.stars-medium {
		background-image:
			radial-gradient(1.5px 1.5px at 100px 50px, var(--cosmic-cyan), transparent),
			radial-gradient(1.5px 1.5px at 200px 120px, var(--cosmic-purple), transparent),
			radial-gradient(1.5px 1.5px at 50px 200px, white, transparent);
		background-size: 300px 300px;
		animation: twinkle 4s ease-in-out infinite 0.5s;
		opacity: 0.5;
	}

	.stars-large {
		background-image:
			radial-gradient(2px 2px at 150px 150px, var(--cosmic-gold), transparent),
			radial-gradient(2px 2px at 350px 80px, var(--cosmic-pink), transparent);
		background-size: 400px 400px;
		animation: twinkle 5s ease-in-out infinite 1s;
		opacity: 0.4;
	}

	@keyframes twinkle {
		0%, 100% { opacity: 0.3; }
		50% { opacity: 0.8; }
	}

	/* Gradient Mesh */
	.gradient-mesh {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background:
			radial-gradient(circle at 20% 30%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
			radial-gradient(circle at 80% 70%, rgba(6, 182, 212, 0.15) 0%, transparent 50%),
			radial-gradient(circle at 50% 50%, rgba(236, 72, 153, 0.1) 0%, transparent 70%);
		pointer-events: none;
		z-index: 2;
		animation: meshFloat 20s ease-in-out infinite;
	}

	@keyframes meshFloat {
		0%, 100% {
			transform: translate(0, 0) scale(1);
		}
		33% {
			transform: translate(-20px, 20px) scale(1.05);
		}
		66% {
			transform: translate(20px, -20px) scale(0.95);
		}
	}

	/* Content Wrapper */
	.content-wrapper {
		position: relative;
		z-index: 10;
		padding: 3rem 1.5rem;
		max-width: 1400px;
		margin: 0 auto;
	}

	/* Hero Header */
	.hero-header {
		text-align: center;
		margin-bottom: 4rem;
		animation: fadeInUp 1s ease-out;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.logo-container {
		position: relative;
		display: inline-block;
		margin-bottom: 1.5rem;
	}

	.logo-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 300px;
		height: 100px;
		background: radial-gradient(ellipse, rgba(139, 92, 246, 0.4) 0%, transparent 70%);
		filter: blur(30px);
		animation: pulse 3s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
		50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.1); }
	}

	.logo-text {
		position: relative;
		font-family: 'Orbitron', sans-serif;
		font-size: clamp(3rem, 8vw, 6rem);
		font-weight: 900;
		letter-spacing: 0.1em;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
	}

	.logo-ursa {
		background: linear-gradient(135deg, #ffffff 0%, var(--cosmic-cyan) 50%, var(--cosmic-purple) 100%);
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		text-shadow: 0 0 40px rgba(139, 92, 246, 0.5);
		animation: logoShine 3s ease-in-out infinite;
	}

	@keyframes logoShine {
		0%, 100% { filter: brightness(1); }
		50% { filter: brightness(1.3); }
	}

	.logo-dot {
		color: var(--cosmic-pink);
		animation: dotPulse 2s ease-in-out infinite;
	}

	@keyframes dotPulse {
		0%, 100% { opacity: 1; transform: scale(1); }
		50% { opacity: 0.5; transform: scale(0.8); }
	}

	.logo-ai {
		background: linear-gradient(135deg, var(--cosmic-cyan) 0%, var(--cosmic-gold) 100%);
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		font-size: 0.6em;
		font-weight: 700;
	}

	.tagline {
		font-family: 'JetBrains Mono', monospace;
		font-size: clamp(0.9rem, 2vw, 1.2rem);
		font-weight: 500;
		letter-spacing: 0.15em;
		margin-bottom: 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.tagline-accent {
		color: var(--cosmic-cyan);
		text-transform: uppercase;
		animation: fadeInUp 1s ease-out 0.3s backwards;
	}

	.tagline-divider {
		color: var(--cosmic-purple);
		opacity: 0.5;
	}

	.tagline-text {
		color: rgba(255, 255, 255, 0.9);
		animation: fadeInUp 1s ease-out 0.4s backwards;
	}

	.hero-subtitle {
		font-size: clamp(0.75rem, 1.5vw, 0.9rem);
		color: rgba(255, 255, 255, 0.5);
		font-weight: 300;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		animation: fadeInUp 1s ease-out 0.5s backwards;
	}

	/* Footer Stats */
	.page-footer {
		margin-top: 4rem;
		padding: 2rem 0;
		animation: fadeInUp 1s ease-out 0.8s backwards;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	.footer-stat {
		background: rgba(255, 255, 255, 0.03);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(139, 92, 246, 0.2);
		border-radius: 1rem;
		padding: 1.5rem;
		text-align: center;
		transition: all 0.3s ease;
	}

	.footer-stat:hover {
		background: rgba(255, 255, 255, 0.05);
		border-color: rgba(139, 92, 246, 0.4);
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(139, 92, 246, 0.2);
	}

	.stat-label {
		font-size: 0.75rem;
		color: rgba(255, 255, 255, 0.5);
		text-transform: uppercase;
		letter-spacing: 0.15em;
		margin-bottom: 0.5rem;
	}

	.stat-value {
		font-size: 1.5rem;
		font-weight: 700;
		background: linear-gradient(135deg, var(--cosmic-cyan) 0%, var(--cosmic-purple) 100%);
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.content-wrapper {
			padding: 2rem 1rem;
		}

		.hero-header {
			margin-bottom: 2rem;
		}

		.tagline {
			flex-direction: column;
			gap: 0.5rem;
		}

		.footer-grid {
			grid-template-columns: 1fr;
			gap: 1rem;
		}
	}

	/* Accessibility: Reduced Motion */
	@media (prefers-reduced-motion: reduce) {
		.stars-layer,
		.stars-small,
		.stars-medium,
		.stars-large,
		.gradient-mesh,
		.logo-glow,
		.logo-ursa,
		.logo-dot,
		.hero-header,
		.tagline-accent,
		.tagline-text,
		.hero-subtitle,
		.page-footer {
			animation: none !important;
			transition: none !important;
		}

		.footer-stat {
			animation: none !important;
			transition: background 0.01s, border-color 0.01s, box-shadow 0.01s !important;
		}

		.footer-stat:hover {
			transform: none !important;
		}
	}
</style>
